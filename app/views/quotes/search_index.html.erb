<div class="prose lg:prose-xl">
    <h1>Quote list</h1>
    <%= form_tag search_index_path, method: :get, data: { turbo_frame: "search_results", turbo_action: "advance", controller: "search", action: "input->search#submit" } do |f| %>
        <%= text_field_tag "query", nil, placeholder: "Search ...", class: "input input-bordered w-full max-w-xs my-5" %>
        <%= submit_tag "Search", class: "btn btn-primary" %>
    <% end %>
</div>

<div class="bg-gray-100 p-8 col-span-5">
    <%= turbo_frame_tag "search_results" do %>
        <%= render partial: "list", locals: { quotes: @quotes } %>
    <% end %>
</div>